<div class="jumbotron">
  <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label>Your email address*:</label>
            {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        </div>
        <div class="form-group">
          <label>Your message*:</label>
          {{textarea value=message class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7"}}
        </div>

        <button class="btn btn-primary btn-lg btn-block" {{action 'saveMessage'}} disabled={{unless isValid 'disabled'}}>
          Send message
        </button>
      </div>

      {{#if responseMessage}}
        <div class="col-md-6">
        <br/>
          <div class="alert alert-success">{{responseMessage}}</div>
        </div>
      {{/if}}
  </div>
</div>
